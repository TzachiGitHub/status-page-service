{
  "name": "status-page-service",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/shared",
    "packages/server",
    "packages/dashboard",
    "packages/public-page",
    "test-app"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:dashboard\" \"npm run dev:public\"",
    "dev:server": "cd packages/server && npm run dev",
    "dev:dashboard": "cd packages/dashboard && npm run dev",
    "dev:public": "cd packages/public-page && npm run dev",
    "build": "npm run build:shared && npm run build:server && npm run build:dashboard && npm run build:public",
    "build:shared": "cd packages/shared && npm run build",
    "build:server": "cd packages/server && npm run build",
    "build:dashboard": "cd packages/dashboard && npm run build",
    "build:public": "cd packages/public-page && npm run build",
    "test": "npm run test --workspaces --if-present",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}
